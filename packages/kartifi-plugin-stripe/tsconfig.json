{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "dist",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "jsx": "react",
    "noImplicitAny": false,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}